<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsActivity" >

    <!-- The main content view -->
    <LinearLayout
        android:id="@+id/content_frame"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/connectivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="false"/>

    </LinearLayout>

    <!-- The navigation drawer -->
    <ScrollView android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="@color/white"
                android:id="@+id/rembrandt_knop">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="6dp"
                    android:id="@+id/item1_img"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/logo"
                    android:contentDescription="@null"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rembrandt_college"
                    android:textSize="25sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/item1_img" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="@color/green">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="6dp"
                    android:id="@+id/item2_img"
                    android:layout_alignParentLeft="true"
                    android:src="@color/black_overlay"
                    android:contentDescription="@null"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Twitterie"
                    android:textSize="25sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/item2_img" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="@color/orange">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="6dp"
                    android:id="@+id/item3_img"
                    android:layout_alignParentLeft="true"
                    android:src="@color/black_overlay"
                    android:contentDescription="@null"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebookie"
                    android:textSize="25sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/item3_img" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</android.support.v4.widget.DrawerLayout>
